<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Jugadores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JugadoresActivity">

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugadores"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/RecyclerJ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/votos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/RecyclerJ"
        app:layout_constraintStart_toEndOf="@+id/btnVotos"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnVotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votos"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/RecyclerJ"
        app:layout_constraintStart_toEndOf="@+id/textViewTitle2"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/btnMisJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Jugadores"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/btnVotos"
        app:layout_constraintBottom_toBottomOf="@id/btnVotos"
        app:layout_constraintStart_toEndOf="@id/btnVotos"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerJ"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
